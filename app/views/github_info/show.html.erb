<div class="row d-flex justify-content-center mt-3">
    <div class="col-auto">
        <table class="table table-hover ">
            <tbody>
                <tr>
                    <th>GitHub LogIn</th>
                    <td><%= @github_login  %></td>
                </tr>
                <tr>
                    <th>GitHub Name</th>
                    <td><%= @github_name %></td>
                </tr>
                <tr>
                    <th colspan="2" style="text-align:center">GitHub Repositories</th>
                </tr>
                <% @github_repos.each do |repos| %>
                    <tr>
                        <td colspan="2" style="text-align:center">
                            <%= link_to  repos["name"], repos["url"], class:"link-dark", target:"_blank" %>
                        </td>
                    </tr>
                <%end%>
            </tbody>
        </table>
    </div>
</div>

